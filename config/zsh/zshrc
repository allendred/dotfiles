#!/usr/bin/env zsh

# zshrc - Main configuration file
# This file is responsible for loading all modular configuration files.

# Define the directory for modules
ZSH_MODULES_DIR="$HOME/.dotfiles/config/zsh/modules"

# Load all modules
if [ -d "$ZSH_MODULES_DIR" ]; then
  # Load all modules in order based on their numeric prefix
  for module in "$ZSH_MODULES_DIR"/[0-9][0-9]_*.zsh; do
    if [ -f "$module" ]; then
      source "$module"
    fi
  done
fi

# Clean up the variable to avoid polluting the shell environment
unset ZSH_MODULES_DIR module